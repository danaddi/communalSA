<resources>
    <!-- Основная тема -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="colorPrimary">@color/accent_lime</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Карточка -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <!-- Кнопка основная -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_button_lime</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Кнопка outline -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/button_outline</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Поле ввода -->
    <style name="DarkTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/card_bg</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="boxStrokeColor">@color/accent_lime</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
    </style>

    <!-- Круглая карточка для иконок/логотипа -->
    <style name="CircleCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_bg</item>
        <item name="cardCornerRadius">50dp</item>
        <item name="cardElevation">8dp</item>
        <item name="android:elevation">8dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>
